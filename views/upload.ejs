  <h2>Previously Uploaded Images:</h2>
  <form action="/delete" method="POST">
    <% if (images.length > 0) { %>
      <ul>
        <% images.forEach(image => { %>
          <li>
            <input type="checkbox" name="images[]" value="<%= image %>" />
            <img src="/uploads/<%= image %>" />
          </li>
        <% }); %>
      </ul>
      <button type="submit">Delete Selected Images</button>
    <% } else { %>
      <p>No images available.</p>
    <% } %>
  </form>

  <script>
    // JavaScript code if needed
  </script>
</body>
</html>
